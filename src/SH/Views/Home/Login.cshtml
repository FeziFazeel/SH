@model SH.Models.Residents

@{
    ViewData["Title"] = "Login";
}


   <center> <h2><strong>Please Login</strong></h2></center>

&nbsp;&nbsp;&nbsp;

    <form asp-action="Login">
        <div class="form-horizontal">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Login" class="btn btn-info" />
                </div>
            </div>
        </div>
    </form>



